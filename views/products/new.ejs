<% include ../partials/header %>


<h1 class = "text-center">Create a new product</h1>

<section id="cover">
    <div id="cover-caption">
        <div id="container" class="container">
            <div class="row text-white">
                <div class="col-sm-6 offset-sm-3 text-center">
                    <h1 class="display-4">Bootstrap 4</h1>
                    <div class="info-form">
                        <form method = "post" action="/products" class="form-inlin justify-content-center">
                            <div class="form-group">
                                <label class="sr-only">Name</label>
                                <input type="text" class="form-control" name = "product[name]" placeholder="Enter product's name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">Name</label>
                                <input type="text" class="form-control" name = "product[img]" placeholder="Enter img url">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">Name</label>
                                <input type="number" class="form-control" name = "product[price]" placeholder="Enter product's price">
                            </div>
                            
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Example textarea</label>
                                <textarea class="form-control" name = "product[description]" id="exampleFormControlTextarea1" rows="3" placeholder="Enter product's description"></textarea>
                             </div>
                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        </form>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>
</section>
<% include ../partials/footer %>