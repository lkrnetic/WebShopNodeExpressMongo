<% include ../partials/header %>


<h1 class = "text-center">Comment form</h1>

<section id="cover">
    <div id="cover-caption">
        <div id="container" class="container">
            <div class="row text-white">
                <div class="col-sm-6 offset-sm-3 text-center">
                    <h1 clas="display-4">Bootstrap 4</h1>
                    <div class="info-form">
                        <form method="post" action="/products/<%= product._id %>/comments" class="form-inlin justify-content-center">
                            <div class="form-group">
                                <label class="sr-only">User</label>
                                    <input type="text" class="form-control" value = "<%= currentUser.username%>" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Comment</label>
                                    <input type="text" class="form-control" name = comment[text] placeholder="Enter comment">
                             </div>
                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        </form>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>
</section>

<% include ../partials/footer %>
