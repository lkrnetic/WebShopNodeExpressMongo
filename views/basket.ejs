<% include partials/header %>


    <h1 class = "text-center">Basket</h1>

    <div class="container">
      <div class="row">
        <div class="col-md-12 border" style="background-color:lavender;">
            <h3 class"my-4">Basket products</h3>
            <% basket.basketProducts.forEach(function(product){ %>
                <div class="card" style="width: 18rem;">
                  <img class="card-img-top" src="<%= product.productImg %>" alt="Card image cap" style="width:240px;height:160px;">
                  <div class="card-body">
                    <h5 class="card-title"><b>Product name:</b>  <%= product.productName %></h5>
                    <p class="card-text"><b>Product price:</b> <%=product.productPrice %>$</p>
                    
                    <a href="/basket/<%= currentUser._id %>/<%=product._id%>" class="btn btn-danger">Remove product</a>
                  </div>
                </div>
            <% }) %>
            <p class="my-3"><b>Basket total price: </b> <%= basket.basketTotalPrice %>$</p>
        </div>
        <form method="POST" action="/order/<%= currentUser._id %>">
            <div class="form-group invisible">
                    <input type="text" class="form-control" name ="basketTotalPrice" value = "<%= basket.basketTotalPrice %>">
                    <input type="text" class="form-control" name ="basket1" value = "<%= basket%>">
                    <input type="text" class="form-control" name ="basketId" value = "<%= basket._id %>">
                    <input type="text" class="form-control" name ="basketProducts" value = "<%= basket.basketProducts %>">
            </div>
            <button class="btn btn-info">Confirm Order</button>
        </form>
      </div>
    </div>
<% include partials/footer %>