<% include ./partials/header %>


<h1 class = "text-center">Registration form</h1>

<section id="cover">
    <div id="cover-caption">
        <div id="container" class="container">
            <div class="row text-white">
                <div class="col-sm-6 offset-sm-3 text-center">
                    <h1 class="display-4">Bootstrap 4</h1>
                    <div class="info-form">
                        <form method = "POST" action="/register" class="form-inlin justify-content-center">
                            <div class="form-group">
                                <label class="sr-only">Username</label>
                                <input type="text" class="form-control" name = "username" placeholder="Enter username">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Password</label>
                                <input type="password" class="form-control" name = "password" placeholder="Enter password">
                             </div>
                             <div class="form-group">
                                <label class="sr-only">E-mail</label>
                                <input type="text" class="form-control" name = "email" placeholder="Enter your email adress">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">Adress</label>
                                <input type="text" class="form-control" name = "adress" placeholder="Enter your adress">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">ZIP code</label>
                                <input type="number" class="form-control" name = "zipcode" placeholder="Enter your zip code">
                            </div>
                            <div class="form-group">
                                <label class="sr-only">Phone number</label>
                                <input type="number" class="form-control" name = "phonenumber" placeholder="Enter phone number">
                            </div>
                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        </form>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>
</section>

<% include ./partials/footer %>